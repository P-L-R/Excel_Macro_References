Public Sub clearAllask()

sure = MsgBox("Are you sure you want to clear the fields?", vbYesNo, "ATTENTION!")
If sure = vbYes Then
    Call clearAll
    'Call clearSheets
Else
    MsgBox "Reset cancelled!"
End If

End Sub

Public Function clearAll()

Dim aShFieldLoc(0 To 7) As String
aShFieldLoc(0) = "C4"
aShFieldLoc(1) = "G4"
aShFieldLoc(2) = "K4"
aShFieldLoc(3) = "N4"
aShFieldLoc(4) = "C8"
aShFieldLoc(5) = "C12"
aShFieldLoc(6) = "C16"
aShFieldLoc(7) = "C20"

For i = 0 To 7
    Range(aShFieldLoc(i)).Value = ""
    If i > 4 Then
        ThisWorkbook.Sheets("Macro").OLEObjects("ComboBox" & i - 4).Object.Value = ""
    End If
Next i

End Function
